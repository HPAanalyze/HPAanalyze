hpa_available <- function(downloaded_data) {
    available_data <- list()
    
    if('normal_tissue' %in% names(downloaded_data)) {
        available_data$normal_tissue <- unique(downloaded_data$normal_tissue[['tissue']])
        available_data$normal_cell <- unique(downloaded_data$normal_tissue[['cell_type']])
    }
    
    if('pathology' %in% names(downloaded_data)) {
        available_data$cancer <- unique(downloaded_data$pathology[['cancer']])
    }
    
    if('normal_tissue' %in% names(downloaded_data)) {
        available_data$subcellular_location <- unique(downloaded_data$subcellular_location[['approved']])%>%
            strsplit(';') %>% unlist() %>% unique() %>% na.omit() %>% as.vector()
    }
    
    return(available_data)
}